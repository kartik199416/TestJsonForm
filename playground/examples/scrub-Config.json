{
  "schema": {
    "scrubConfigs": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "Scrub Configuration",
        "properties": {
          "uri": {
            "type": "string",
            "title": "Request URI",
            "required": true
          },
          "scrubData": {
            "type": "array",
            "items": {
              "type": "object",
              "title": "Scrub Data",
              "properties": {
                "httpEntityType": {
                  "type": "string",
                  "title": "HTTP entity type",
                  "enum": [
                    "REQUEST_HEADERS",
                    "REQUEST_BODY",
                    "RESPONSE_HEADERS",
                    " RESPONSE_BODY"
                  ],
                  "required": true
                },
                "contentType": {
                  "type": "string",
                  "title": "MIME type for http entity",
                  "enum": [
                    "JSON",
                    "XML",
                    "TEXT",
                    "URLENCODED"
                  ],
                  "required": false
                },
                "scrubAttributes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "title": "Scrub data attributes",
                    "properties": {
                      "attributes": {
                        "type": "string",
                        "title": "Path expression for attribute",
                        "required": true
                      },
                      "contentType": {
                        "type": "string",
                        "title": "MIME type for http entity",
                        "enum": [
                          "JSON",
                          "XML",
                          "TEXT",
                          "URLENCODED"
                        ],
                        "required": false
                      },
                      "partial": {
                        "type": "string",
                        "title": "partial scrub config",
                        "required": false
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}


